  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login - Get JWT Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"your@email.com\",\n    \"password\": \"yourpassword\"\n}"
            },
            "url": {
              "raw": "http://localhost:8000/api/token/",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "token"]
            }
          }
        },
        {
          "name": "Refresh JWT Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"refresh\": \"<your-refresh-token>\"\n}"
            },
            "url": {
              "raw": "http://localhost:8000/api/token/refresh/",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "token", "refresh"]
            }
          }
        }
      ]
    },
